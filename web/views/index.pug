html
    head
        title='ConnectFourBot'
        link(rel='stylesheet' href='/css/style.css')
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
    body
        div.container
            div.bot
                div.avatar
                    img(src='/images/bot_avatar.png')
                div.name
                    h2='ConnectFourBot'
                div.example
                    img(src='/images/example.gif')
                div.button-container
                    a.button(href="https://discordapp.com/oauth2/authorize?client_id=" + bot_id + "&scope=bot" target='_blank')
                        label='add to your server'
                div.join-us
                    a='Or join our server '
                    a(href='https://darkaqua.net' target='_blank')='darkaqua'
                    a=' (spanish only)'